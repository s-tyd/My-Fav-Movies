<div class="form-horizontal" role="form">
  <%= form_for(@movie) do |form| %>
    <% if @movie.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @movie.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label 'タイトル',:class => "control-label" %>
      <%= form.text_field :title, {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= form.label '評価',:class => "control-label" %>
      <%= form.select :rate, [5, 4, 3, 2, 1],{}, {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= form.label '公開年',:class => "control-label" %>
      <%= form.number_field :year, {class: 'form-control'} %>
    </div>

    <div class="form-group">
      <%= form.label '感想',:class => "control-label" %>
      <%= form.text_area :content,  {class: 'form-control'} %>
    </div>


    <div class="actions">
      <%= link_to '戻る', movies_path, :class => "btn btn-primary" %>
      <%= form.submit :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>



