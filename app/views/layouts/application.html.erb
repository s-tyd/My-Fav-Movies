<!DOCTYPE html>
<html>
  <head>
    <title>MyFavMovie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'My Fav Movie', root_path, class: 'navbar-brand' %>
        <%= link_to '新規作成', new_movie_path, class: 'navbar-brand' %>
      </div>
    <% if @q != nil %>
      <%= search_form_for @q, html: { class: 'navbar-form navbar-right' } do |f| %>
        <div class="form-group">
          <%= f.search_field :title_cont, class: 'form-control', placeholder: 'title' %>
        </div>
        <%= f.submit class: 'btn btn-default' %>
      <% end %>
    <% end %>

    </div>
  </div>

  <% if flash[:notice] %>
    <div class="alert alert-success text-center" role="alert" id="alert_fadeout">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
